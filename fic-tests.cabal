license:             GPL-3
license-file:        LICENSE
author:              Pavan Rikhi
maintainer:          pavan@ic.org
copyright:           FIC 2014
category:            Testing
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10


executable fic-tests
  main-is:             Main.hs
  other-modules:       Main.Colors,
                       Main.Expectations,
                       Main.Tests,
                       Main.Tests.Store
  other-extensions:    OverloadedStrings
  build-depends:       base >= 4.7 && < 4.8,
                       hspec-webdriver >= 0.3.1,
                       webdriver >= 0.6.0.1,
                       text
  hs-source-dirs:      src
